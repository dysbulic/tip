        ( function() {
            function configure( config ) {
                for( prop in config ) {
                    if( config.hasOwnProperty( prop ) ) {
                        var next = config[ prop ]
                        var current = this[ prop ]
                        if( next instanceof Object && current instanceof Object ) {
                            configure.call( current, next )
                        } else {
                            this[ prop ] = next
                        }
                    }
                }
            }
            Tip.configure = configure
        } )()
