      function play() {
        let water = document.getElementById('water')
        water.classList.add('anim')
        
        function done() {
           water.classList.remove('anim')
        }

        let audio = document.getElementById('flush')
        // This should only be done once
        audio.addEventListener('ended', done, false);

        audio.play() 
     }
    </script>
