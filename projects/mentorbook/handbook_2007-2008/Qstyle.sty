% Changes the margins for a particular part of the document. Takes 2 arguments:
	% 1. the left margin indent (negative values decrease the left margin)
	% 2. the right margin indent (negative values decrease the right margin)
\newenvironment{changemargin}[2]{
	\begin{list}{}{
		\setlength{\topsep}{0pt}
		\setlength{\leftmargin}{#1}
		\setlength{\rightmargin}{#2}
		\setlength{\listparindent}{\parindent}
		\setlength{\itemindent}{\parindent}
		\setlength{\parsep}{\parskip}
	}
\item[]}{\end{list}}

